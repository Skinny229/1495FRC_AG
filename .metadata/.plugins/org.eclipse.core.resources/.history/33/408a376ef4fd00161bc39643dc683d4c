package org.usfirst.frc.team1495.robot.commands;

import edu.wpi.first.wpilibj.command.Command;

/**
 *
 */
public class adjustShooter extends Command {
	
	public static double shooterStrength = .93;
	double speed;
	boolean finished = false;

	public adjustShooter(boolean s) {
		if(s)
			speed = .01;
		else
			speed = -.01;
			
	}

	protected void initialize() {
        finished = false;
	}

	protected void execute() {
		adjustShooter.shooterStrength += speed;
		finished = true;
	}

	protected boolean isFinished() {
		return finished;
	}

	protected void end() {
		System.out.println("Speed Adjusted by: " + (speed * 100) + "%");
	}

	protected void interrupted() {
		
	}
	
	public static void setDefSpeed(){
		adjustShooter.shooterStrength = .4;
	}
}
